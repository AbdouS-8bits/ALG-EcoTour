// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  role      String   @default("user")

  emailVerified        Boolean   @default(false)
  verificationToken    String?
  resetPasswordToken   String?
  resetPasswordExpires DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings        Booking[]
  reviews         Review[]
  logs            AdminAuditLog[]
  reviewMessages  ReviewMessage[]
  sentMessages    Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")
  
  // Support system relations
  supportSessionsAsUser  SupportSession[] @relation("UserSessions")
  supportSessionsAsAgent SupportSession[] @relation("AgentSessions")

  @@index([verificationToken])
  @@index([resetPasswordToken])
  @@map("users")
}

model SupportSession {
  id          String   @id @default(cuid())
  userId      Int?
  user        User?    @relation("UserSessions", fields: [userId], references: [id])
  userName    String
  userEmail   String
  agentId     Int?
  agent       User?    @relation("AgentSessions", fields: [agentId], references: [id])
  agentName   String?
  status      String   @default("waiting") // waiting, active, closed
  startedAt   DateTime @default(now())
  closedAt    DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  messages    SupportMessage[]

  @@index([status])
  @@index([agentId])
  @@map("support_sessions")
}

model SupportMessage {
  id          String         @id @default(cuid())
  sessionId   String
  session     SupportSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  message     String         @db.Text
  senderType  String         // user or agent
  senderName  String
  timestamp   DateTime       @default(now())

  @@index([sessionId])
  @@map("support_messages")
}

model AdminAuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  action    String
  details   String?
  createdAt DateTime @default(now())

  @@map("admin_audit_logs")
}

model EcoTour {
  id              Int         @id @default(autoincrement())
  title           String
  description     String?
  location        String
  latitude        Float?
  longitude       Float?
  price           Float
  maxParticipants Int
  photoURL        String?
  duration        Int  @default(0)                   // number of days
  difficulty      String  @default("easy")               // easy/medium/hard
  categoryId      Int?
  category        Category?  @relation(fields: [categoryId], references: [id])
  status          String      @default("active")
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  images     TourImage[]
  itineraries Itinerary[]
  reviews    Review[]
  bookings   Booking[]

  @@map("eco_tours")
}

model Booking {
  id            Int      @id @default(autoincrement())
  tourId        Int
  tour          EcoTour  @relation(fields: [tourId], references: [id])
  userId        Int?     // optional if booking can be made by guest without account
  user          User?    @relation(fields: [userId], references: [id])
  guestName     String
  guestEmail    String
  guestPhone    String
  participants  Int
  totalPrice    Float @default(0)
  status        String   @default("pending") // "pending", "confirmed", "cancelled"
  paymentStatus String   @default("pending")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("bookings")
}

model Review {
  id        Int      @id @default(autoincrement())
  tourId    Int
  tour      EcoTour  @relation(fields: [tourId], references: [id])
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  rating    Int      // 1-5 stars
  comment   String?  @db.Text
  likes     Int      @default(0)
  helpful   Int      @default(0)
  reported  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  messages  ReviewMessage[]

  @@index([tourId])
  @@index([userId])
}

model ReviewMessage {
  id        Int      @id @default(autoincrement())
  reviewId  Int
  review    Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  message   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([reviewId])
  @@index([userId])
  @@map("review_messages")
}

model Message {
  id         Int      @id @default(autoincrement())
  senderId   Int
  sender     User     @relation("SentMessages", fields: [senderId], references: [id])
  receiverId Int
  receiver   User     @relation("ReceivedMessages", fields: [receiverId], references: [id])
  subject    String?
  content    String   @db.Text
  read       Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([senderId])
  @@index([receiverId])
  @@index([read])
  @@map("messages")
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  icon        String?
  tours       EcoTour[]
  createdAt   DateTime @default(now())
}

model TourImage {
  id        Int      @id @default(autoincrement())
  tourId    Int
  tour      EcoTour  @relation(fields: [tourId], references: [id])
  url       String
  alt       String?
  isMain    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Itinerary {
  id          Int      @id @default(autoincrement())
  tourId      Int
  tour        EcoTour  @relation(fields: [tourId], references: [id])
  dayNumber   Int
  title       String
  description String   @db.Text
  createdAt   DateTime @default(now())
}
